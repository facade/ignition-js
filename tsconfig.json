{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "lib": ["dom", "es2017"],
        "noEmit": true,
        "module": "esnext",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "esnext",
        "baseUrl": ".",
        "paths": {
            "*": ["*", "src/js/*"],
            "ignitionIframeScript": ["node_modules/@facadecompany/ignition-ui/compiled/ignition"]
        }
    },
    "include": ["src/**/*", "index.d.ts"]
}
