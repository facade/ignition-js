{
    "name": "@facadecompany/ignition-js",
    "main": "dist/index.js",
    "version": "0.0.1",
    "description": "A beautiful error page for inspecting your JavaScript errors more closely",
    "homepage": "https://flareapp.io/ignition",
    "license": "ISC",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/facade/ignition-js.git"
    },
    "bugs": {
        "url": "https://github.com/facade/ignition-js/issues"
    },
    "scripts": {
        "watch": "webpack --mode development --watch",
        "build": "NODE_ENV=production webpack --mode production",
        "format": "prettier --write 'src/**/*.{js,ts}'"
    },
    "dependencies": {
        "@flareapp/flare-client": "^1.0.0",
        "@facadecompany/ignition-ui": "^0.0.1"
    },
    "devDependencies": {
        "@babel/core": "^7.4.5",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/plugin-syntax-dynamic-import": "^7.2.0",
        "@babel/plugin-transform-runtime": "^7.4.4",
        "@babel/preset-env": "^7.4.5",
        "@babel/preset-typescript": "^7.3.3",
        "@types/node": "^13.7.0",
        "babel-loader": "^8.0.6",
        "husky": "^1.3.1",
        "lint-staged": "^8.1.5",
        "prettier": "^1.16.4",
        "raw-loader": "^4.0.0",
        "typescript": "^3.5.2",
        "webpack": "^4.35.0",
        "webpack-cli": "^3.3.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && yarn build"
        }
    },
    "lint-staged": {
        "linters": {
            "*.{js,ts}": [
                "yarn format",
                "git add"
            ]
        },
        "ignore": [
            "dist/**/*"
        ]
    },
    "jest": {
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/__helpers__/"
        ]
    }
}
